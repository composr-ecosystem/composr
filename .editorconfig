root = true

[*]
end_of_line = lf
insert_final_newline = false
indent_style = space
indent_size = tab
indent_brace_style = K&R
tab_width = 4
charset = utf-8
trim_trailing_whitespace = false
max_line_length = 10000
quote_type = single
curly_bracket_next_line = false
spaces_around_operators = true
spaces_around_brackets = outside

[*.php]
insert_final_newline = true
trim_trailing_whitespace = true
ij_shell_use_unix_line_separator = true

[*.config]
indent_style = tab
tab_width = 3

[*.css]
indent_style = tab
quote_type = single
tab_width = 3

[*.tpl]
indent_style = tab
quote_type = double
tab_width = 3

[*.xml]
indent_style = tab
quote_type = double
tab_width = 3

[*.js]
indent_style = space
quote_type = single
tab_width = 4

[*.sh]
indent_style = tab
quote_type = single
tab_width = 3

[*.txt]
indent_style = tab
quote_type = single
tab_width = 3


